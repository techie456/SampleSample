@model Rooms
@{
    ViewData["Title"] = "Create Room";
}

<h2>Create Room</h2>

<form asp-action="Create">
    <div>
        <label>Room Type</label>
        <input asp-for="RoomType" />
    </div>
    <div>
        <label>Rate</label>
        <input asp-for="Rate" />
    </div>
    <div>
        <label>Availability Status</label>
        <input asp-for="AvailabilityStatus" />
    </div>
    <button type="submit">Save</button>
    <a asp-controller="Guests" asp-action="Index" class="btn btn-secondary">Back</a>
</form>

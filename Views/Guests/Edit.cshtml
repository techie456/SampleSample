@model Guests
@{
    ViewData["Title"] = "Edit Guest";
}

<h2>Edit Guest</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="GuestID" />
    <div>
        <label>Name</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Contact Info</label>
        <input asp-for="ContactInfo" />
    </div>
    <div>
        <label>Address</label>
        <input asp-for="Address" />
    </div>
    <button type="submit">Save</button>
</form>
